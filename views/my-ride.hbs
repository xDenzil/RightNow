<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>RightNowTaxi</title>
    <link rel="stylesheet" href="../assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../assets/fonts/fontawesome-all.min.css">
    <link rel="stylesheet" href="../assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="../assets/css/customstyling.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../assets/css/Map-Clean.css">
    <link rel="stylesheet" href="../assets/css/Navigation-Clean.css">
    <link rel="stylesheet" href="../assets/css/styles.css">
</head>

<body class="map-preview b">
    <!-- Start: Navigation Clean -->
    <div>
        <nav class="navbar navbar-light navbar-expand-md navigation-clean">
            <div class="container"><a class="navbar-brand" href="/"><img src="../assets/img/rnt-logo2.png" width="150px"></a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div
                    class="collapse navbar-collapse" id="navcol-1">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation"><a class="nav-link" href="/"><i class="fas fa-hourglass-half"></i>&nbsp; Cab Request</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link active" href="/my-ride"><i class="fas fa-car"></i>&nbsp; My Ride</a></li>
                    </ul>
            </div>
    </div>
    </nav>
    </div>
    <!-- End: Navigation Clean -->

    <section>
        <div class="row justify-content-center p-lg-5 my-3">
            <div class="col">
                <div class="card">
                    <div class="card-body shadow">
                        <div class="row">
                            <div class="col">
                                <h1 class="display-1 text-center display-1 p-0">Travel</h1>
                                <div class="table-responsive text-center">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th colspan="2">travelling</th>
                                                <th>distance</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>{{from}}</td>
                                                <td>{{to}}</td>
                                                <td>{{distance}}</td>
                                            </tr>
                                            <tr></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col">
                                <h1 class="display-1 text-center display-1 p-0">Ride</h1>
                                <div class="table-responsive text-center">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th colspan="2">driver name</th>
                                                <th>trip #</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>{{passengerf}}</td>
                                                <td>{{passengerl}}</td>
                                                <td>{{_id}}</td>
                                            </tr>
                                            <tr></tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col justify-content-center">
                <h4 class="text-center"><button class="btn btn-dark" type="button">Destination Arrived</button></h4>
            </div>
        </div>
        
    </section>
    <script src="../assets/js/jquery.min.js"></script>
    <script src="../assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="../assets/js/customscript.js"></script>
</body>

</html>